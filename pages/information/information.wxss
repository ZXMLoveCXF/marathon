/* pages/information/information.wxss */

picker {
  position: relative;
}

.notice {
  box-sizing: border-box;
  padding: 10px 0;
  padding-left: 30rpx;
  font-size: 26rpx;
  background-color: #000;
}

.notice image {
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top: 6rpx;
}

.container {
  box-sizing: border-box;
  margin-left: 30rpx;
  width: 720rpx;
  padding-bottom: 150rpx;
}

.name, .sex, .idCard, .phone, .detailAdd, .zipCode, .cloth, .pants, .shoes, .VIP,
.VIPPhone {
  display: flex;
  justify-content: space-between;
  height: 90rpx;
  line-height: 90rpx;
}

.detailAdd {
  height: 180rpx;
  line-height: 90rpx;
}

.label {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 140rpx;
}

.VIP .label {
  width: 170rpx;
}

.VIPPhone .label {
  width: 200rpx;
}

.input {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
  margin-left: 30rpx;
}

.input .inputBox {
  line-height: 90rpx;
  height: 90rpx;
  position: relative;
}

.arrow {
  width: 20rpx;
  height: 30rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

.gray {
  color: #666;
}

.white {
  color: #fff;
}

.accept {
  background-color: #000;
  width: 100%;
  position: fixed;
  bottom: 0;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  z-index: 1995;
}

.accept button::after {
  border: none;
}

.accept button {
  background-color: #e32e44;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  border-radius: 100rpx;
  font-size: 30rpx;
}
