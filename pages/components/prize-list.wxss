/* pages/components/prize-list.wxss */
.list{
  padding: 20rpx 0;
  display: flex;
}
.list .img, .list .img image{
  width: 200rpx;
  height: 200rpx;
}
.list .info{
  margin: 10rpx 0;
  border-top: 5rpx solid #e32e44;
  border-right: 5rpx solid #e32e44;
  border-bottom: 5rpx solid #e32e44;
  background: white;
  flex: 1;
  padding: 0 20rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.list .info .top{
  display: flex;
  justify-content: space-between;
  padding: 6rpx 0;
}
.list .info .top view{
  color: black;
  font-weight: bold;
  font-size: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  flex: 1;
  text-overflow: ellipsis;
}
.list .info .top text{
  color: #e32e44;
  font-weight: bold;
}
.list .info .center{
  background: linear-gradient(to bottom right,#5238ee, #f44d74);
  display: inline-block;
  padding: 5rpx 10rpx;
  font-size: 24rpx;
}
.list .info .bottom{
  color: #656565;
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 6rpx 0;
}