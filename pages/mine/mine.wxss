/* pages/mine/mine.wxss */
.banner{
  position: relative
}

.banner .bg {
  width: 100%;
}
.banner .face{
  box-sizing: border-box;
  position: absolute;
  top: 55%;
  left: 50%;
  transform: translate(-50%,-50%);
  text-align: center
}
.banner .face image{
  box-sizing: border-box;
  border: 6rpx solid rgba(255,255,255,.5);
  border-radius: 100%;
  width: 150rpx;
  height: 150rpx;
}
.banner .face view{
  margin-top: 10rpx;
}
.container {
  box-sizing: border-box;
  margin: 0 auto;
  width: 690rpx;
}
.lightLine{
  height: 1rpx;
  background-color: rgba(255,255,255,.1)
}